{
    "name": "@idumb/opencode-plugin",
    "version": "0.1.0",
    "description": "iDumb Meta-Framework Plugin for OpenCode - Context manipulation, governance enforcement, and agent orchestration",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "idumb": "./bin/cli.js"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist",
        "bin",
        "templates"
    ],
    "scripts": {
        "build": "bun build src/index.ts --outdir dist --target node && bun build src/cli.ts --outdir bin --target node && mv bin/cli.js bin/cli.js.tmp && echo '#!/usr/bin/env node' > bin/cli.js && cat bin/cli.js.tmp >> bin/cli.js && rm bin/cli.js.tmp",
        "dev": "bun --watch src/index.ts",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "bun run build"
    },
    "keywords": [
        "opencode",
        "plugin",
        "ai",
        "agent",
        "meta-framework",
        "context-management",
        "governance",
        "bmad",
        "orchestration"
    ],
    "author": "shynlee04",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shynlee04/idumb-plugin.git"
    },
    "bugs": {
        "url": "https://github.com/shynlee04/idumb-plugin/issues"
    },
    "homepage": "https://github.com/shynlee04/idumb-plugin#readme",
    "dependencies": {
        "@opencode-ai/plugin": "^0.1.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0",
        "bun-types": "latest"
    },
    "peerDependencies": {
        "@opencode-ai/plugin": ">=0.1.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "bun": ">=1.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}